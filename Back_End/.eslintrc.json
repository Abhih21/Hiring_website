{
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"  // Enables eslint-plugin-prettier and displays prettier errors as ESLint errors
      ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "js": true
      }
    },
    "plugins": [ "prettier"],
    "rules": {
          "prettier/prettier": "error"
      // Custom rules for backend can be added here
    }
  }
  